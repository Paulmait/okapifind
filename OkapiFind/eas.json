{
  "cli": {
    "version": ">= 10.0.0",
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development",
        "EXPO_PUBLIC_ENV": "development",
        "EXPO_PUBLIC_API_URL": "http://localhost:3000"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "m-medium",
        "image": "latest",
        "bundleIdentifier": "com.okapi.find.dev"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "image": "latest",
        "applicationId": "com.okapi.find.dev"
      },
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "APP_ENV": "preview",
        "EXPO_PUBLIC_ENV": "preview",
        "EXPO_PUBLIC_API_URL": "https://staging-api.okapifind.com"
      },
      "ios": {
        "resourceClass": "m-medium",
        "simulator": false,
        "image": "latest",
        "bundleIdentifier": "com.okapi.find"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "image": "latest",
        "applicationId": "com.okapi.find"
      },
      "channel": "preview",
      "credentialsSource": "remote"
    },
    "staging": {
      "distribution": "internal",
      "env": {
        "APP_ENV": "staging",
        "EXPO_PUBLIC_ENV": "staging",
        "EXPO_PUBLIC_API_URL": "https://staging-api.okapifind.com"
      },
      "ios": {
        "resourceClass": "m-large",
        "autoIncrement": true,
        "image": "latest",
        "bundleIdentifier": "com.okapi.find"
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true,
        "image": "latest",
        "applicationId": "com.okapi.find"
      },
      "channel": "staging",
      "credentialsSource": "remote"
    },
    "production": {
      "env": {
        "APP_ENV": "production",
        "EXPO_PUBLIC_ENV": "production",
        "EXPO_PUBLIC_API_URL": "https://api.okapifind.com"
      },
      "ios": {
        "resourceClass": "m-large",
        "autoIncrement": true,
        "image": "latest",
        "cocoapods": "1.14.3",
        "bundleIdentifier": "com.okapi.find"
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true,
        "image": "latest",
        "applicationId": "com.okapi.find"
      },
      "channel": "production",
      "credentialsSource": "remote"
    }
  },
  "submit": {
    "preview": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "YOUR_ASC_APP_ID",
        "appleTeamId": "YOUR_TEAM_ID"
      },
      "android": {
        "track": "internal",
        "releaseStatus": "draft"
      }
    },
    "staging": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "YOUR_ASC_APP_ID",
        "appleTeamId": "YOUR_TEAM_ID"
      },
      "android": {
        "track": "internal",
        "releaseStatus": "completed",
        "rollout": 0.1
      }
    },
    "production": {
      "extends": "production",
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "YOUR_ASC_APP_ID",
        "appleTeamId": "YOUR_TEAM_ID",
        "sku": "com.okapi.find"
      },
      "android": {
        "track": "production",
        "releaseStatus": "completed",
        "rollout": 0.1,
        "changesNotSentForReview": false,
        "serviceAccountKeyPath": "./path/to/google-service-account.json"
      }
    }
  }
}