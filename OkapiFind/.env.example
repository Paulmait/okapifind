# ============================================
# OkapiFind Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Get these from Firebase Console > Project Settings
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from Supabase Dashboard > Settings > API
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Get these from Stripe Dashboard > Developers > API keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product/Price IDs (create these in Stripe Dashboard)
STRIPE_PLUS_PRICE_ID=price_plus_monthly_299
STRIPE_PRO_PRICE_ID=price_pro_monthly_499
STRIPE_FAMILY_PRICE_ID=price_family_monthly_799

# ============================================
# GOOGLE AI (GEMINI) CONFIGURATION
# ============================================
# Get from https://makersuite.google.com/app/apikey
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# GOOGLE MAPS CONFIGURATION
# ============================================
# Get from Google Cloud Console > APIs & Services > Credentials
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
EXPO_PUBLIC_GOOGLE_MAPS_IOS_API_KEY=your_ios_specific_maps_key_here
EXPO_PUBLIC_GOOGLE_MAPS_ANDROID_API_KEY=your_android_specific_maps_key_here

# ============================================
# AUTHENTICATION PROVIDERS
# ============================================
# Apple Sign In (iOS only)
# Configure in Apple Developer Portal
EXPO_PUBLIC_APPLE_CLIENT_ID=com.okapifind.app

# Google Sign In
# Get from Google Cloud Console > APIs & Services > Credentials
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com

# ============================================
# EMAIL SERVICE (RESEND)
# ============================================
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=notifications@okapifind.com
RESEND_REPLY_TO_EMAIL=support@okapifind.com

# ============================================
# PUSH NOTIFICATIONS
# ============================================
# Expo Push Notifications (optional, Expo handles most of this)
EXPO_PUBLIC_PUSH_NOTIFICATION_PROJECT_ID=your-expo-project-id

# OneSignal (alternative push service)
# EXPO_PUBLIC_ONESIGNAL_APP_ID=your_onesignal_app_id

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Sentry Error Tracking
EXPO_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=okapifind

# Mixpanel Analytics (optional)
# EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Amplitude Analytics (optional)
# EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key

# ============================================
# REVENUE & MONETIZATION
# ============================================
# RevenueCat
EXPO_PUBLIC_REVENUECAT_API_KEY_IOS=appl_your_ios_api_key_here
EXPO_PUBLIC_REVENUECAT_API_KEY_ANDROID=goog_your_android_api_key_here
REVENUECAT_SECRET_KEY=your_revenuecat_secret_key_here
REVENUECAT_WEBHOOK_SECRET=your_webhook_secret_here

# AdMob (if implementing ads)
# EXPO_PUBLIC_ADMOB_APP_ID_IOS=ca-app-pub-xxxxx~xxxxx
# EXPO_PUBLIC_ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxx~xxxxx

# ============================================
# EXTERNAL APIS
# ============================================
# Weather API (for parking predictions)
EXPO_PUBLIC_WEATHER_API_KEY=your_openweather_api_key_here

# Geocoding Service
EXPO_PUBLIC_GEOCODING_API_KEY=your_geocoding_api_key_here

# Traffic Data API
# EXPO_PUBLIC_TRAFFIC_API_KEY=your_traffic_api_key_here

# ============================================
# STORAGE & CDN
# ============================================
# Cloudflare R2 / AWS S3 (for photo storage)
STORAGE_ACCESS_KEY_ID=your_access_key_id
STORAGE_SECRET_ACCESS_KEY=your_secret_access_key
STORAGE_BUCKET_NAME=okapifind-photos
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Cloudinary (alternative for image optimization)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# APP CONFIGURATION
# ============================================
# Environment
NODE_ENV=development  # development | staging | production
EXPO_PUBLIC_ENV=development  # development | staging | production

# API Endpoints
EXPO_PUBLIC_API_URL=https://api.okapifind.com
EXPO_PUBLIC_WEBSOCKET_URL=wss://ws.okapifind.com

# App Store URLs (for rating prompts)
EXPO_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/okapifind/id123456789
EXPO_PUBLIC_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.okapifind.app

# Deep Linking
EXPO_PUBLIC_DEEP_LINK_SCHEME=okapifind
EXPO_PUBLIC_UNIVERSAL_LINK_DOMAIN=okapifind.com

# ============================================
# SECURITY & COMPLIANCE
# ============================================
# Encryption Keys (generate strong random keys)
ENCRYPTION_KEY=your_32_char_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Admin Access (comma-separated emails)
ADMIN_EMAILS=admin@okapifind.com,ceo@okapifind.com,analytics@okapifind.com

# ============================================
# DEVELOPMENT & TESTING
# ============================================
# Test User Credentials (for development only)
TEST_USER_EMAIL=test@okapifind.com
TEST_USER_PASSWORD=test_password_123

# Feature Flags
EXPO_PUBLIC_ENABLE_AI_PREDICTIONS=true
EXPO_PUBLIC_ENABLE_CARPLAY=true
EXPO_PUBLIC_ENABLE_WIDGETS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_AR_NAVIGATION=false  # Coming soon

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_SHOW_PERFORMANCE_MONITOR=false
EXPO_PUBLIC_LOG_LEVEL=info  # debug | info | warn | error

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Primary Database (Supabase handles this, but for direct connections)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis Cache (optional)
# REDIS_URL=redis://user:password@host:6379

# ============================================
# DEPLOYMENT & CI/CD
# ============================================
# Expo EAS Build
EAS_PROJECT_ID=your_eas_project_id
EXPO_OWNER=your_expo_account_name

# App Versions
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Code Signing (handled by EAS, but for reference)
# IOS_TEAM_ID=your_apple_team_id
# ANDROID_KEYSTORE_PASSWORD=your_keystore_password

# ============================================
# NOTES
# ============================================
# 1. Never commit the actual .env file
# 2. Keep production keys separate from development
# 3. Rotate keys regularly for security
# 4. Use environment-specific files (.env.development, .env.production)
# 5. Document any new variables you add

# For production deployment:
# - Use a secure key management service (AWS KMS, HashiCorp Vault)
# - Enable API key restrictions in Google Cloud Console
# - Set up IP whitelisting for database access
# - Configure CORS properly for web endpoints
# - Enable rate limiting on all API endpoints