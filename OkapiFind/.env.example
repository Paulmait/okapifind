# OkapiFind Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real values to version control

# ==========================================
# CORE APP CONFIGURATION
# ==========================================
NODE_ENV=development
EXPO_PUBLIC_APP_NAME=OkapiFind
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUNDLE_IDENTIFIER=com.okapifind.app

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id
EXPO_PUBLIC_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ==========================================
# SUPABASE CONFIGURATION (if using)
# ==========================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==========================================
# GOOGLE OAUTH
# ==========================================
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret

# ==========================================
# MAPS & LOCATION
# ==========================================
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# ==========================================
# PAYMENT & SUBSCRIPTIONS
# ==========================================
EXPO_PUBLIC_REVENUECAT_API_KEY_IOS=your-revenuecat-ios-api-key
EXPO_PUBLIC_REVENUECAT_API_KEY_ANDROID=your-revenuecat-android-api-key
REVENUECAT_SECRET_KEY=your-secret-key
REVENUECAT_WEBHOOK_SECRET=your-webhook-secret

# ==========================================
# ANALYTICS & MONITORING
# ==========================================
EXPO_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_AUTH_TOKEN=your-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=okapifind

# ==========================================
# EAS CONFIGURATION
# ==========================================
EAS_PROJECT_ID=your-eas-project-id
EXPO_PUBLIC_EAS_UPDATE_URL=https://u.expo.dev/your-project-id
EXPO_PUBLIC_EAS_UPDATE_CHANNEL=preview

# ==========================================
# DATABASE (if using backend)
# ==========================================
DATABASE_URL=postgresql://[username]:[password]@[host]:5432/[database]
MONGODB_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/[database]
REDIS_URL=redis://[username]:[password]@[host]:6379/[db]

# ==========================================
# SECURITY
# ==========================================
JWT_SECRET=your-jwt-secret-change-this
ENCRYPTION_KEY=your-32-char-encryption-key
API_KEY_SALT=your-api-key-salt